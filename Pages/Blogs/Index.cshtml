@page
@model BlogManagementSystem.Pages.Blogs.IndexModel
@{
}




<div class="container bg-purple radius-20">
    <div style="height: 200px;" class="d-flex  justify-content-center align-items-center ">
        <h2 class="text-white">Blog</h2>
    </div>
</div>

<div class="container mx-auto">
    <div class="form-search bg-primary">
        <div class="input-group mb-3 shadow">
            <label class="input-group-text bg-white fs-3 border-none" for="search">
                <i class='bx bx-search  '></i>
            </label>
            <input type="text" name="search" class="form-control border-none" placeholder="Search" style=" height: 60px;">
        </div>

    </div>
</div>


<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-dark" asp-page="Add" asp-route-id="0" >Add</a>
</div>

<div class="container">
    <div class="row">

        @{
            foreach (var item in Model.Blogs)
            {
                <div class="col-lg-4 my-3">
                    <div class="card border-none">
                        <img src="/img/@item.imagePath" class="card-img-top radius-20" alt="...">
                        <div class="card-body border-none">
                            <h6 class="text-blue">@item.Category</h6>
                            <h3 class="card-title">@item.title</h3>
                            <p class="card-text mb-0">@item.content!.Substring(0,5)</p>
                            <div class="d-flex align-items-center mt-1">
                                <div class="">
                                    <img src="/img/user.jpg" style="width: 50px;height: 50px; border-radius: 50%;" />
                                </div>
                                <div class="ms-3 mt-3">
                                    <h6 class="mb-0">full name</h6>
                                    <p>15-6-2023</p>
                                </div>
                            </div>
                            <a asp-page="Add" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a>
                            <form method="post" asp-route-id="@item.Id" >
                                <button type="submit" class="btn btn-primary" >Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }

        }

    </div>


</div>
